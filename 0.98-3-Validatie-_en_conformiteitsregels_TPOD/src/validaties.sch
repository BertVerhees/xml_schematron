    xmlns:g-ref="http://www.geostandaarden.nl/imow/geometrie-ref/v20190901"
    xmlns:gml="http://www.opengis.net/gml/3.2"
    xmlns:lvbb="http://www.overheid.nl/2017/lvbb"
